generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Idea {
  id              Int       @id @default(autoincrement())
  title           String
  content         String
  abstract        String?   // Add this field
  createdAt       DateTime  @default(now())  // Add this field
  updatedAt       DateTime  @updatedAt       // Optional but recommended
  author          User      @relation("UserIdeas", fields: [authorId], references: [id])
  authorId        Int
  keywords        Keyword[]
  usersInterested User[]    @relation("UserInterests")  // Add this relation
}

enum UserRole {
  USER
  ADMIN
  STUDENT
  PROFESSOR
}

model User {
  id              Int       @id @default(autoincrement())
  name            String
  email           String    @unique
  passwordHash    String
  role            UserRole  @default(USER)
  ideas           Idea[]    @relation("UserIdeas")
  ideasOfInterest Idea[]    @relation("UserInterests")  // Add this relation
}

model File {
  id        Int      @id @default(autoincrement())
  name      String
  content   String
  highlights String?
  authorId  Int
}

model Keyword {
  id     Int    @id @default(autoincrement())
  keyword String @unique  // Consider making this unique
  ideas  Idea[] // Change to many-to-many relation
}